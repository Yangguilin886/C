#include <stdio.h>
#include <string.h>
int main() {
   int n;
   scanf("%d",&n);
   for(int i=0;i<n;i++)
   {
    char sum[100];
    scanf("%s",sum);
    int m=strlen(sum);
    if(m<10)
   {
    printf("%s\n",sum);
   }
   else {
   printf("%c%d%c\n",sum[0],m-2,sum[m-1]);
   }
   }
    return 0;
}