bool isPowerOfTwo(int n) {
    int m,i=0;
    if(n<=0)
    {
        return false;
    }
    if(n==1)
    return true;
    while(n>=2)
    {
        if(n%2!=0)
        {
          return false;
        }
        m=n%2;
        n/=2;
    }
    
    if(m==0)
    {
        return true;
    }
    else
    return false;
}